<%# @meeting.users.each do |user| %>
  <%#= user.email %>
<%# end %>

<div class="meeting-container">
  <div class="top-info">
    <div class="meeting-info">
      <h1><%= @meeting.title %></h1>
      <h5><%= @meeting.location %></h5>
      <p> <%= @meeting.date %></p>
      <p>Hosted by <%= @host.first_name %> <%= @host.last_name %></p>
      <p>Placeholder for description<%= @meeting.description %></p>
      <!-- <img src="#" alt="" class="mini-avatar"> -->
      <i class="fas fa-user-friends"></i>
      <i class="fas fa-user-friends"></i>
      <i class="fas fa-user-friends"></i>
      <i class="fas fa-user-friends"></i>
    </div>
    <div id="map"
      style="width: 40%;
      height: 300px;"
      data-markers="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
    </div>
  </div>
  <div class="bottom-info">
    <div class="host-details">
      <h6>About the organiser:</h6>
      <!-- <h5>Organised by <%#= @host.first_name %></h5> -->
      <div class="card">
        <img src="https://img.discogs.com/J0dDznbRdLgNsWDDktbsC0xCFRA=/fit-in/500x500/filters:strip_icc():format(jpeg):mode_rgb():quality(90)/discogs-images/R-3649743-1338847217-5371.jpeg.jpg" alt="" class="card-image">
        <div class="card-info">
          <h6><%= @host.first_name %></h6>
          <h6><%= @host.profession %></h6>
          <p><%= @host.bio %></p>
        </div>
      </div>
    </div>
    <div class="meeting-actions">
      <h5>Meeting controls</h5>
      <p>placeholder for join request</p>
      <%= link_to "Edit this meeting", edit_meeting_path(@meeting), class: 'button' %>
      <%= link_to "Delete this meeting", meeting_path, method: :delete, class: 'button' %>
    </div>
  </div>
</div>
